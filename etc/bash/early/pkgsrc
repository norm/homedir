# ~/etc/bash/rc/pkgsrc
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil -*-
#
# bash startup commands specifically for pkgsrc

if [ -x /ports/bin ]; then
       PATH="/ports/bin:/ports/sbin:${PATH}"
    MANPATH="/ports/man:${MANPATH}"
    
        BASH_COMPLETION='/ports/share/bash-completion/bash_completion'
    BASH_COMPLETION_DIR='/ports/share/bash-completion.d'
fi
