# ~/etc/bash/rc/aws
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 2 -*-
# 
# common settings for Amazon Web Services

export EC2_PRIVATE_KEY=$( echo ${HOME}/etc/ec2/pk-* )
export        EC2_CERT=$( echo ${HOME}/etc/ec2/cert-* )
export     EC2_KEYPAIR='mnf-keypair'
export      AMI_BUCKET='cackhanded-ami'
export  EC2_AVAIL_ZONE='us-east-1a'

function aws-setenv {
    export           AWS_USER_ID=$( getpassword AWS_USER_ID )
    export     AWS_ACCESS_KEY_ID=$( getpassword AWS_ACCESS_KEY_ID )
    export AWS_SECRET_ACCESS_KEY=$( getpassword AWS_SECRET_ACCESS_KEY )
}

function aws-killenv {
    unset                       \
        AWS_USER_ID             \
        AWS_ACCESS_KEY_ID       \
        AWS_SECRET_ACCESS_KEY
}
