# miscellaneous settings

export    CVS_RSH='/usr/bin/ssh'
export     EXINIT="set sh=/bin/sh sw=4 ai redraw report=2"
export   LC_CTYPE='en_GB.UTF-8'
export    INPUTRC="${HOME}/etc/input"

alias visudo='VISUAL=vi sudo visudo'
