# github:etc/bash/defaults/10.locations
# -*- Mode: Bash; tab-width: 4; indent-tabs-mode: nil; -*-
#
#       Override the default locations for things that store as dotfiles,
#       where possible.

export     HISTFILE="${HOME}/var/bash_history"          # ~/.bash_history
export      INPUTRC="${HOME}/etc/input"                 # ~/.inputrc
export LESSHISTFILE="${HOME}/var/less_history"          # ~/.lesshst
export          VIM="${HOME}/etc/vim"                   # ~/.vim
